<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:33306/mydatabase?useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">rootpassword</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.transaction.coordinator_class">jdbc</property>
        <property name="show_sql">true</property>
        <!--
            Possible values
            validate, create-only, drop, update, create, create-drop, none

            We use none since we allready created the table using SQL
        -->
        <property name="hbm2ddl.auto">none</property>
        <!--
            This is our enteties (tables)
        -->
        <mapping class="se.apiva.Contact"></mapping>
        <mapping class="se.apiva.SchoolClass"></mapping>
        <mapping class="se.apiva.Student"></mapping>
    </session-factory>
</hibernate-configuration>